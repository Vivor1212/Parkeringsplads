@page
@model Parkeringsplads.Pages.CarPages.CarModel

<h1>My Cars</h1>

<div class="row">

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Add a New Car</h5>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger">@Model.ErrorMessage</div>
                }

                <form method="post">
                    <div class="form-group">
                        <label asp-for="CarModelName" class="form-label"></label>
                        <input asp-for="CarModelName" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="CarPlate" class="form-label"></label>
                        <input asp-for="CarPlate" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="CarCapacity" class="form-label"></label>
                        <input asp-for="CarCapacity" class="form-control" type="number" required min="1" max="10" />
                    </div>
                    <button type="submit" class="btn btn-primary">Add Car</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        @if (Model.Cars != null && Model.Cars.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Bilnavn</th>
                        <th>Nummerplade</th>
                        <th>Antal Passagersæder</th>
                        <th>Rediger/Slet bil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var car in Model.Cars)
                    {
                        <tr>
                            <td>@car.CarModel</td>
                            <td>@car.CarPlate</td>
                            <td>@car.CarCapacity</td>
                            <td>
                                <a asp-page="/CarPages/CarEdit" asp-route-carId="@car.CarId" class="btn btn-sm btn-warning">Edit</a>
                                <form method="post" asp-page-handler="Delete" asp-route-id="@car.CarId" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this car?');">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>You don't have any cars associated with your account.</p>
        }
    </div>
</div>