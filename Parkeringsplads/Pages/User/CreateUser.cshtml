@page
@model CreateUserModel
@{
    ViewData["Title"] = "Create User";
}

<h2>Add New User</h2>

<form method="post">
    <div>
        <label asp-for="User.FirstName"></label>
        <input asp-for="User.FirstName" />
        <span asp-validation-for="User.FirstName"></span>
    </div>
    <div>
        <label asp-for="User.LastName"></label>
        <input asp-for="User.LastName" />
        <span asp-validation-for="User.LastName"></span>
    </div>
    <div>
        <label asp-for="User.Email"></label>
        <input asp-for="User.Email" />
        <span asp-validation-for="User.Email"></span>
    </div>
    <div>
        <label asp-for="User.Phone"></label>
        <input asp-for="User.Phone" />
        <span asp-validation-for="User.Phone"></span>
    </div>
    <div>
        <label asp-for="User.Password"></label>
        <input asp-for="User.Password" type="password" />
        <span asp-validation-for="User.Password"></span>
    </div>
    <div>
        <label asp-for="User.Title"></label>
        <input asp-for="User.Title" />
        <span asp-validation-for="User.Title"></span>
    </div>
    <div>
        <label asp-for="User.SchoolId"></label>
        <select asp-for="User.SchoolId" asp-items="Model.Schools" class="form-control"></select>

            <option value="">Select School</option>
        </select>
        <span asp-validation-for="User.SchoolId"></span>
    </div>

    <h3>Address Information</h3>
    <div class="form-group">
        <label>City</label>
        <select asp-for="CityId" asp-items="Model.City" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Address Road</label>
        <input asp-for="AddressRoad" class="form-control" />
    </div>
    <div class="form-group">
        <label>Address Number</label>
        <input asp-for="AddressNumber" class="form-control" />
    </div>

    <button type="submit">Add User</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
