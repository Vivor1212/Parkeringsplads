@page
@model Parkeringsplads.Pages.Admin.ResetPasswordModel
@{
    ViewData["Title"] = "Admin - Skift adgangskode";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post">
    <div class="form-group">
        <label for="Email">Bruger Email</label>
        <input type="email" class="form-control" id="Email" name="Email" asp-for="Email" required />
    </div>

    <div class="form-group">
        <label for="NewPassword">Ny adgangskode</label>
        <input type="password" class="form-control" id="NewPassword" name="NewPassword" asp-for="NewPassword" required />
    </div>

    <div class="form-group">
        <label for="ConfirmNewPassword">Gentag ny adgangskode</label>
        <input type="password" class="form-control" id="ConfirmNewPassword" name="ConfirmNewPassword" asp-for="ConfirmNewPassword" required />
    </div>

    <div class="form-group">
        <input type="submit" value="Skift adgangskode" class="btn btn-primary" />
    </div>

</form>

<a href="/Admin/AdminDashboard" class="btn btn-secondary mt-3">Tilbage til oversigt</a>
