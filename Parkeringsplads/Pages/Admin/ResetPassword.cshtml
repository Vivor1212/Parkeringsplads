@page
@model Parkeringsplads.Pages.Admin.ResetPasswordModel
@{
}
<form method="post">
    <div class="form-group">
        <label for="Email">User Email</label>
        <input type="email" class="form-control" id="Email" name="Email" asp-for="Email" required />
    </div>

    <div class="form-group">
        <label for="NewPassword">New Password</label>
        <input type="password" class="form-control" id="NewPassword" name="NewPassword" asp-for="NewPassword" required />
    </div>

    <div class="form-group">
        <input type="submit" value="Change Password" class="btn btn-primary" />
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">
            @Model.ErrorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success">
            @Model.SuccessMessage
        </div>
    }
</form>