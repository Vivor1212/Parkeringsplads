@page
@model Parkeringsplads.Pages.Admin.CarAdminModel
@{
}

<h1>All Cars</h1>

@if (Model.Car != null && Model.Car.Any())
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Car Id</th>
                <th>Model</th>
                <th>Plate</th>
                <th>Capacity</th>
                <th>Driver Id</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model.Car)
            {
                <tr>
                    <td>@car.CarId</td>
                    <td>@car.CarModel</td>
                    <td>@car.CarPlate</td>
                    <td>@car.CarCapacity</td>
                    <td>@car.DriverId</td>
                    <td>
                        <a asp-page="/CarPages/CarEdit"
                           asp-route-carId="@car.CarId"
                           title="Edit"
                           class="text-warning me-2"
                           onclick="return confirm('Are you sure you want to edit this car?');">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                    <td>
                        <form method="post"
                              asp-page-handler="Delete"
                              asp-route-carId="@car.CarId"
                              onsubmit="return confirm('Are you sure you want to delete this car?');"
                              class="d-inline">
                            <button type="submit" class="btn btn-link p-0" title="Delete">
                                <i class="fas fa-trash text-danger"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No cars found.</p>
}
