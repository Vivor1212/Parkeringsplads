@page
@model Parkeringsplads.Pages.Admin.EditDriverAdminModel
@{
    ViewData["Title"] = "Admin - Rediger Chauffør";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<div class="mb-4">
    <h2>Redigerer Chauffør</h2>
    <p><strong>Chauffør Navn:</strong> @Model.SelectedDriverName</p>
    <p><strong>Chauffør ID:</strong> @Model.DriverId</p>
</div>

<form method="post">
    <input type="hidden" asp-for="DriverId" />

    <div class="mb-4">
        <label asp-for="DriverLicense" class="form-label">Chaufførens kørekortnummer</label>
        <input asp-for="DriverLicense" class="form-control" required />
        <span asp-validation-for="DriverLicense" class="text-danger"></span>
    </div>

    <div class="mb-4">
        <label asp-for="DriverCpr" class="form-label">Chaufførens CPR-nummer</label>
        <input asp-for="DriverCpr" class="form-control" required />
        <span asp-validation-for="DriverCpr" class="text-danger"></span>
    </div>

    <div class="mb-4">
        <label asp-for="SelectedUserId" class="form-label">Bruger</label>
        <select asp-for="SelectedUserId" class="form-control" asp-items="Model.Users" required>
            <option value="">Vælg bruger</option>
        </select>
        <span asp-validation-for="SelectedUserId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Gem ændringer</button>
</form>
