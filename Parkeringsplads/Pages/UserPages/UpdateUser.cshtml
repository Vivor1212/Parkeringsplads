@page
@model Parkeringsplads.Pages.UserPages.UpdateUserModel

<h1>Update your information</h1>

@if (!string.IsNullOrEmpty(Model.UserEmail))
{


    <form method="post">
        <div class="form-group">
            <label asp-for="User.FirstName">Fornavn: </label>
            <input type="text" asp-for="User.FirstName" class="form-control"  placeholder="@Model.FirstName">
           
            <span asp-validation-for="User.FirstName"></span>
        </div>

        <div class="form-group">
            <label asp-for="User.LastName">Efternavn: </label>
            <input type="text" asp-for="User.LastName" class="form-control"placeholder="@Model.LastName">
            
            <span asp-validation-for="User.LastName"></span>
        </div>

        <div class="form-group">
            <label asp-for="User.Phone">Telefonnummer: </label>
            <input type="number" asp-for="User.Phone" class="form-control"  placeholder="@Model.Phone">

            <span asp-validation-for="User.Phone"></span>
        </div>



        <div class="form-group">
            <label asp-for="User.Email">Email: </label>

            <input type="text" asp-for="User.Email" class="form-control" placeholder="@Model.UserEmail">

            <span asp-validation-for="User.Email"></span>
        </div>

         <div>
        <label asp-for="User.SchoolId">Vælg skole::</label>
            <select asp-for="User.SchoolId" asp-items="Model.Schools" class="form-control" placeholder="@Model.School">

                <option value="" disabled selected>
                    
                    @Model.SchoolName
                
                
                </option> <!-- Placeholder option -->


            </select>

           
    
        <span asp-validation-for="User.SchoolId"></span>
    </div>


        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

}
else
{
    <p>Denne email er allerede i brug, forsøg venligst igen.</p>
    <div>
        <a href="/User/UpdateUser">Opdater din profil</a>
    </div>
}
