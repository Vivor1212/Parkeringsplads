@page
@model Parkeringsplads.Pages.TripPages.DriversTripsModel
@{
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"/>
<div class=" p-3 pt-5 pb-5">
    <h1 class="pb-3">Mine kørsler</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Trips.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover table-sm">
                <thead class="table-light">
                    <tr>
                        <th>From Destination</th>
                        <th>To Destination</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Available Seats</th>
                        <th>Requests</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var trip in Model.Trips)
                    {
                        var pendingRequests = trip.Requests.Where(r => r.RequestStatus == null).ToList();
                        <tr>
                            <td class="destination-column">@trip.FromDestination</td>
                            <td class="destination-column">@trip.ToDestination</td>
                            <td>@trip.TripDate</td>
                            <td>@trip.TripTime.ToString("HH:mm")</td>
                            <td>
                                @if (trip.Car != null)
                                {
                                    @($"{trip.TripSeats} / {trip.Car.CarCapacity}")
                                }
                                else
                                {
                                    @trip.TripSeats
                                    <small class="text-muted">(No car assigned)</small>
                                }
                            </td>
                            <td>
                                @if (trip.Requests.Any() == true)
                                {
                                    <a asp-page="/TripPages/TripDetails" asp-route-tripId="@trip.TripId" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye"></i> View Requests <span class="badge bg-primary">@pendingRequests.Count</span>
                                    </a>
                                }
                                else
                                {
                                    <a asp-page="/TripPages/TripDetails" asp-route-tripId="@trip.TripId" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye"></i> View Requests <span class="badge bg-primary">0</span>
                                    </a>
                                }
                            </td>
                            <td>
                                <form asp-page-handler="Delete" asp-route-tripId="@trip.TripId" method="post" onsubmit="return confirm('Are you sure you want to delete this trip?');">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-muted">No trips created yet.</p>
    }
</div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}



<style>
    .destination-column{
        max-width: 200px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>