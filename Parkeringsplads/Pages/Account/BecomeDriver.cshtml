@page
@model Parkeringsplads.Pages.Account.BecomeDriverModel
@{
}
<h2>Become a Driver</h2>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form method="post">
    <div class="form-group">
        <label asp-for="Driver.DriverLicense" class="control-label"></label>
        <input asp-for="Driver.DriverLicense" class="form-control" />
        <span asp-validation-for="Driver.DriverLicense" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for=Driver.DriverCpr></label>
        <input asp-for="Driver.DriverCpr" class="form-control" pattern="\d{10}"/>
        <span asp-validation-for="Driver.DriverCpr" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Register as Driver</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}