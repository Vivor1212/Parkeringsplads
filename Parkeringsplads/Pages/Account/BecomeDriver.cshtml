@page
@model Parkeringsplads.Pages.Account.BecomeDriverModel
@{
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Html.Raw(TempData["SuccessMessage"])
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h2>Bliv kører</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Driver.DriverLicense" class="control-label">Kørekort nr.</label>
        <input asp-for="Driver.DriverLicense" class="form-control" />
        <span asp-validation-for="Driver.DriverLicense" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for=Driver.DriverCpr>CPR nr.</label>
        <input asp-for="Driver.DriverCpr" class="form-control" pattern="\d{10}"/>
        <span asp-validation-for="Driver.DriverCpr" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Register som kører</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}